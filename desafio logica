#include <stdio.h>
#include <string.h>

// Estrutura de carta
typedef struct {
    char nome[50];
    int populacao;
    float area;
    float pib;
    int pontos_turisticos;
    float densidade; // calculada no cadastro anterior
} Carta;

int main() {
    // Duas cartas já cadastradas (poderiam vir do desafio anterior)
    Carta c1 = {"Brasil", 214000000, 8516000.0, 1.9, 50, 214000000 / 8516000.0};
    Carta c2 = {"Argentina", 46000000, 2780000.0, 0.7, 35, 46000000 / 2780000.0};

    int opcao;

    printf("===== MENU DE COMPARAÇÃO SUPER TRUNFO =====\n");
    printf("1 - População\n");
    printf("2 - Área\n");
    printf("3 - PIB\n");
    printf("4 - Pontos Turísticos\n");
    printf("5 - Densidade Demográfica\n");
    printf("Escolha o atributo para comparação: ");
    scanf("%d", &opcao);

    printf("\nComparando %s x %s\n", c1.nome, c2.nome);

    switch(opcao) {
        case 1: // População
            printf("População:\n%s: %d habitantes\n%s: %d habitantes\n", 
                   c1.nome, c1.populacao, c2.nome, c2.populacao);
            if (c1.populacao > c2.populacao) {
                printf("Vencedor: %s\n", c1.nome);
            } else if (c2.populacao > c1.populacao) {
                printf("Vencedor: %s\n", c2.nome);
            } else {
                printf("Empate!\n");
            }
            break;

        case 2: // Área
            printf("Área:\n%s: %.2f km²\n%s: %.2f km²\n", 
                   c1.nome, c1.area, c2.nome, c2.area);
            if (c1.area > c2.area) {
                printf("Vencedor: %s\n", c1.nome);
            } else if (c2.area > c1.area) {
                printf("Vencedor: %s\n", c2.nome);
            } else {
                printf("Empate!\n");
            }
            break;

        case 3: // PIB
            printf("PIB:\n%s: %.2f trilhões USD\n%s: %.2f trilhões USD\n", 
                   c1.nome, c1.pib, c2.nome, c2.pib);
            if (c1.pib > c2.pib) {
                printf("Vencedor: %s\n", c1.nome);
            } else if (c2.pib > c1.pib) {
                printf("Vencedor: %s\n", c2.nome);
            } else {
                printf("Empate!\n");
            }
            break;

        case 4: // Pontos Turísticos
            printf("Pontos Turísticos:\n%s: %d\n%s: %d\n", 
                   c1.nome, c1.pontos_turisticos, c2.nome, c2.pontos_turisticos);
            if (c1.pontos_turisticos > c2.pontos_turisticos) {
                printf("Vencedor: %s\n", c1.nome);
            } else if (c2.pontos_turisticos > c1.pontos_turisticos) {
                printf("Vencedor: %s\n", c2.nome);
            } else {
                printf("Empate!\n");
            }
            break;

        case 5: // Densidade Demográfica (regra invertida: menor vence)
            printf("Densidade Demográfica:\n%s: %.2f hab/km²\n%s: %.2f hab/km²\n", 
                   c1.nome, c1.densidade, c2.nome, c2.densidade);
            if (c1.densidade < c2.densidade) {
                printf("Vencedor: %s\n", c1.nome);
            } else if (c2.densidade < c1.densidade) {
                printf("Vencedor: %s\n", c2.nome);
            } else {
                printf("Empate!\n");
            }
            break;

        default:
            printf("Opção inválida! Escolha de 1 a 5.\n");
    }

    return 0;
}
